{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.vue"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "bundler",
    "types": ["vite/client", "node"],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true // default import を許可
  },
  "exclude": ["node_modules", "dist"]
}
